<resources>
    <!-- Base application theme. -->
    <style name="Theme.BitcoinExplorer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_300</item>
        <item name="colorPrimaryVariant">@color/orange_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/rad_500</item>
        <item name="colorSecondaryVariant">@color/rad_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/orange_200</item>
        <item name="colorSecondaryContainer">@color/orange_300</item>
    </style>
</resources>